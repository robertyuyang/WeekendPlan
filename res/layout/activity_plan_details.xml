<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sogou.weekendplan.activity.PlanDetailsActivity" >

    <FrameLayout
        android:id="@+id/layout_progress"
        android:layout_width="50dp"
        android:layout_height="400dp" >

 <ImageView
            android:layout_marginLeft="22dp"
            android:layout_width="3dp"
        android:layout_height="match_parent"
        android:src="@drawable/bar"
        android:scaleType="fitXY" 
       />
 
        <ImageView
            android:layout_marginTop="0dp"
            android:id="@+id/iv_handler1"
            style="@style/handler"/>
        <ImageView
            android:layout_marginTop="100dp"
            android:id="@+id/iv_handler2"
            style="@style/handler"/>
        <ImageView
            android:layout_marginTop="270dp"
            android:id="@+id/iv_handler3"
            style="@style/handler"/>
        <ImageView
            android:layout_marginTop="380dp"
            android:id="@+id/iv_handler4"
            style="@style/handler"/>

       
        
    </FrameLayout>
    
   
    <FrameLayout 
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:layout_toRightOf="@+id/layout_progress"
        android:orientation="vertical"
        >
        
         <!-- event 1 -->

        <LinearLayout
            android:id="@+id/layout_event1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_event_time1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="9:00" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
           	android:layout_marginLeft="10dp"
            android:text="桌游  五道口-一刻馆"/>
        </LinearLayout>
        
        
        <!-- event 2 -->
        


        <LinearLayout
            android:id="@+id/layout_event2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal" 
            android:layout_marginTop="100dp">

        <TextView
            android:id="@+id/tv_event_time2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="11:15" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
           	android:layout_marginLeft="10dp"
            android:text="午餐  火炉火年糕火锅"/>
        </LinearLayout>
        
        
        <!-- event 3 -->


        <LinearLayout
            android:id="@+id/layout_event3"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
             android:layout_marginTop="270dp" >

        <TextView
            android:id="@+id/tv_event_time3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="15:15" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
           	android:layout_marginLeft="10dp"
            android:text="唱歌   五道口-麦颂KTV"/>
        </LinearLayout>
        
        
        
        <!-- event 4 -->


        <LinearLayout
            android:id="@+id/layout_event4"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal" 
            android:layout_marginTop="380dp">

        <TextView
            android:id="@+id/tv_event_time4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="18:00" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
           	android:layout_marginLeft="10dp"
            android:text="晚餐  没名生煎"/>
        </LinearLayout>
        
            
       
        
        
    </FrameLayout>
  
    
    

</RelativeLayout>
