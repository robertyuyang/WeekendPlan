<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sogou.weekendplan"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".activity.StartupActivity"
            android:label="@string/title_activity_startup" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.PlanGenerateActivity"
            android:label="@string/title_activity_plan" >
        </activity>
        <activity
            android:name=".activity.PlanDeterminedActivity"
            android:label="@string/title_activity_plan_determined" >
        </activity>
        <activity
            android:name=".activity.LeftMenuBaseActivity"
            android:label="@string/title_activity_left_menu_base" >
        </activity>
        <activity
            android:name=".activity.MyPlansActivity"
            android:label="@string/title_activity_my_plans" >
        </activity>
        <activity
            android:name="com.sogou.weekendplan.activity.PlanDetailsActivity"
            android:label="@string/title_activity_plan_details" >
        </activity>
    </application>

</manifest>
